    "test-helpers": {
      "root": "libs/test-helpers",
      "sourceRoot": "libs/test-helpers/src",
      "projectType": "library",
      "schematics": {},
      "architect": {
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libs/test-helpers/tsconfig.lib.json",
              "libs/test-helpers/tsconfig.spec.json"
            ],
