            "passWithNoTests": true
          }
        }
      }
    },
    "state": {
      "projectType": "library",
      "root": "libs/state",
      "sourceRoot": "libs/state/src",
      "prefix": "rx",
      "architect": {
        "build-lib": {
          "builder": "@nrwl/angular:package",
          "options": {
            "tsConfig": "libs/state/tsconfig.lib.json",
            "project": "libs/state/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "libs/state/tsconfig.lib.prod.json"
            }
          }
        },
        "build-schematics": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              { "command": "tsc -p libs/state/tsconfig.schematics.json" },
              { "command": "cpx libs/state/schematics/**/{collection.json,schema.json,files/**} dist/libs/state/schematics" }
            ],
            "parallel": false
          }
        },
        "build": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              { "command": "rimraf dist/libs/state" },
              { "command": "nx run state:build-lib" },
              { "command": "nx run state:build-schematics" }
            ],
            "parallel": false
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "libs/state/tsconfig.lib.json",
              "libs/state/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "!libs/state/**/*"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "libs/state/jest.config.js",
            "passWithNoTests": true
          }
        },
        "build-docs": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "nx test-coverage state && nx test-coverage-badge state"
              }
            ]
          }
        },
        "test-coverage-badge": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "npx istanbul-cobertura-badger -b jest-coverage-badge -r ./docs/test-coverage/state/cobertura-coverage.xml -d docs/test-coverage/state"
              }
            ]
          }
        },
        "changelog": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "npx conventional-changelog-cli -p angular -k ./libs/state/package.json -i ./libs/state/CHANGELOG.md -s --commit-path ./libs/state --tagPrefix state@"
              }
            ]
          }
        },
        "test-coverage": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "libs/state/jest.config.js",
            "passWithNoTests": true,
            "codeCoverage": true
          }
        },
        "perfBuild": {
          "builder": "@nrwl/node:build",
          "options": {
            "main": "libs/state/perf/index.ts",
            "outputPath": "dist/libs/state-perf/dist",
            "tsConfig": "libs/state/tsconfig.perf.json"
          }
        },
        "perf": {
          "builder": "@nrwl/node:execute",
          "options": {
            "buildTarget": "state:perfBuild"
          }
        },
        "publish": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "nx changelog template && nx test template && nx build template --prod && cd ./dist/libs/template && npm publish"
              }
            ]
          }
        }
      },
      "schematics": {
        "@nrwl/angular:component": {
          "style": "scss"
        }
      }
    },
